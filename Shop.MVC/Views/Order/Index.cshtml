@model IEnumerable<Shop.Application.Order.OrderDto>

@{
    ViewData["Title"] = "Historia zamówień";
}

<h1>Historia zamówień</h1>
@if (User.Identity.IsAuthenticated)
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@item.FirstName @item.LastName</h5>
                        <p class="card-text">Adres email: @item.Email</p>
                        <p class="card-text">Numer zamówienia: @item.Id</p>
                        <p class="card-text">
                            Opłacone:
                            @if (item.IsPaid == true)
                            {
                                <span class="badge bg-info">Tak</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Nie</span>
                            }
                        </p>
                        <a href="@Url.Action("Details", "Order", new { orderId = item.Id })" class="btn btn-primary">Szczegóły zamówienia</a>
                        <div>
                            @if (item.OrderStatus.ToString() == "Pending" && item.IsPaid == false)
                            {
                                <form asp-action="CancelUserOrder" method="post">
                                    <input type="hidden" name="OrderId" value="@item.Id" />
                                    <button type="submit" class="btn btn-warning">Anuluj zamówienie</button>
                                </form>
                            }
                            else if (item.OrderStatus.ToString() == "Pending")
                            {
                                <span class="badge bg-danger">Przyjęto zamówienie</span>
                            }
                            else if (item.OrderStatus.ToString() == "Cancelled")
                            {
                                <span class="badge bg-danger">Zamówienie anulowane</span>
                            }
                            else if (item.OrderStatus.ToString() == "Shipped")
                            {
                                <span class="badge bg-info">Zamówienie jest realizowane</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Zamówienie zrealizowane</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

}
else
{
    <div>
        <p>Tylko zalogowani użytkownicy mogą wyświetlać historię zamówień.</p>
    </div>
}
