@model IEnumerable<Shop.Application.Order.OrderDto>

@{
    ViewData["Title"] = "AllOrders";
}

<h1>Panel zarządzania zamówieniami</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <a>ID zamówienia</a>
            </th>
            <th>
                <a>Imie</a>
            </th>
            <th>
                <a>Nazwisko</a>
            </th>
            <th>
                <a>Email</a>
            </th>
            <th>
                <a>Numer telefonu</a>
            </th>
            <th>
                <a>Miasto</a>
            </th>
            <th>
                <a>Ulica</a>
            </th>
            <th>
                <a>Numer domu</a>
            </th>
            <th>
                <a>Kod pocztowy</a>
            </th>
            <th>
                <a>Data złożenia</a>
            </th>
            <th>
                Opłacone
            </th>
            <th>
                <a>Szczegóły zamówienia</a>
            </th>
            <th>
                <a>Status zamówienia</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                <a>@item.OrderDate</a>
            </td>
            <td>
                @if (item.IsPaid == true)
                {
                <a class="btn btn-info">Tak</a>
                }
                else
                {
                <a class="btn btn-danger">Nie</a>
                }
            </td>
            <td>
                <a class="btn btn-primary" asp-controller="Order" asp-action="Details" asp-route-orderId="@item.Id">Szczegóły</a>
            </td>
            <td>
                    @if (User.IsInRole("Owner"))
                    {
                        @if (item.OrderStatus.ToString() == "Pending")
                        {
                            <form asp-action="CancelOrderByAdmin" method="post">
                                <input type="hidden" name="OrderId" value="@item.Id" />
                                <button type="submit" class="btn btn-warning">Anuluj zamówienie</button>
                            </form>
                            @if (User.IsInRole("Owner"))
                            {
                                <form asp-action="Ship" method="post">
                                    <input type="hidden" name="OrderId" value="@item.Id" />
                                    <button type="submit" class="btn btn-warning">Oznacz jako wysłane</button>
                                </form>
                            }

                        }
                        else if (item.OrderStatus.ToString() == "Cancelled")
                        {
                            <a class="btn btn-danger">Zamówienie anulowane.</a>
                        }
                        else if (item.OrderStatus.ToString() == "Shipped")
                        {
                            <a class="btn btn-info">Zamówienie jest realizowane.</a>
                        
                                <form asp-action="Complete" method="post">
                                    <input type="hidden" name="OrderId" value="@item.Id" />
                                    <button type="submit" class="btn btn-warning">Oznacz jako zrealizowane.</button>
                                </form>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-success">Zamówienie zrealizowane.</button>
                        }
                    }
            </td>
            
        </tr>
}
    </tbody>
</table>
