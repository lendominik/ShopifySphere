@model IEnumerable<Shop.Application.Order.OrderDto>

@{
    ViewData["Title"] = "AllOrders";
}

<h1>Panel zarządzania zamówieniami</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                    @if (User.IsInRole("Owner"))
                    {
                        @if (item.OrderStatus.ToString() == "Pending")
                        {
                            <form asp-action="CancelOrderByAdmin" method="post">
                                <input type="hidden" name="OrderId" value="@item.Id" />
                                <button type="submit" class="btn btn-warning">Anuluj zamówienie</button>
                            </form>
                            @if (User.IsInRole("Owner"))
                            {
                                <form asp-action="Ship" method="post">
                                    <input type="hidden" name="OrderId" value="@item.Id" />
                                    <button type="submit" class="btn btn-warning">Oznacz jako wysłane</button>
                                </form>
                            }

                        }
                        else if (item.OrderStatus.ToString() == "Cancelled")
                        {
                            <a class="btn btn-danger">Zamówienie anulowane.</a>
                        }
                        else if (item.OrderStatus.ToString() == "Shipped")
                        {
                            <a class="btn btn-info">Zamówienie jest realizowane.</a>
                        
                                <form asp-action="Complete" method="post">
                                    <input type="hidden" name="OrderId" value="@item.Id" />
                                    <button type="submit" class="btn btn-warning">Oznacz jako zrealizowane.</button>
                                </form>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-success">Zamówienie zrealizowane.</button>
                        }
                    }
            </td>
        </tr>
}
    </tbody>
</table>
